{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=OnlineComputerShopDb;Integrated Security=True;Connect Timeout=30;Encrypt=False;TrustServerCertificate=False;ApplicationIntent=ReadWrite;MultiSubnetFailover=False"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:4200",
    "http://localhost:4201"
  ],
  "IdentityServer": {
    "IdentityResources": [
      {
        "Name": "openid",
        "DisplayName": "Your user identifier",
        "Required": true,
        "UserClaims": [ "sub" ]
      },
      {
        "Name": "profile",
        "DisplayName": "Your profile in the system"
      },
      {
        "Name": "user_role",
        "DisplayName": "Your user role",
        "UserClaims": [ "user_role" ]
      }
    ],
    "ApiResources": [
      {
        "Name": "admin-api",
        "DisplayName": "The administrator web api",
        "Scopes": [
          "adminapi.readwrite"
        ],
        "UserClaims": [ "user_role" ]
      },
      {
        "Name": "webshop-api",
        "DisplayName": "The webshop api",
        "Scopes": [
          "webshopapi.readwrite"
        ],
        "UserClaims": [ "user_role" ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "adminapi.readwrite",
        "DisplayName": "Read and write data of the admin api"
      },
      {
        "Name": "webshopapi.readwrite",
        "DisplayName": "Read and write data of the webshop api"
      }
    ],
    "Clients": [
      {
        "ClientId": "admin",
        "ClientName": "The administrator SPA",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequireConsent": false,
        "AllowedScopes": [
          "openid",
          "profile",
          "user_role",
          "adminapi.readwrite"
        ],
        "RedirectUris": [
          "http://localhost:4201",
          "http://localhost:5000/swagger/oauth2-redirect.html",
          "https://localhost:5001/swagger/oauth2-redirect.html"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:4201"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:4201",
          "http://localhost:5000",
          "https://localhost:5001"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true
      },
      {
        "ClientId": "webshop",
        "ClientName": "The webshop SPA",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequireConsent": false,
        "AllowedScopes": [
          "openid",
          "profile",
          "user_role",
          "webshopapi.readwrite"
        ],
        "RedirectUris": [
          "http://localhost:4200",
          "http://localhost:5000/swagger/oauth2-redirect.html",
          "https://localhost:5001/swagger/oauth2-redirect.html"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:4200"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:4200",
          "http://localhost:5000",
          "https://localhost:5001"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true
      }
    ]
  }
}
